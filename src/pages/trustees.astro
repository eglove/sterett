---
import lodash from "lodash";

import type { AvatarColor} from "../components/routes/trustees/trustees";
import { Trustees } from "../components/routes/trustees/trustees";
import Layout from "../layouts/Layout.astro";
import { getTrustees } from "../sanity/queries/get-trustees";

const trustees = await getTrustees();

const colorValues: AvatarColor[] = lodash.shuffle([
  "warning",
  "secondary",
  "danger",
  "primary",
  "success",
]);
---

<Layout
  description="Trustee contact information for Sterett Creek Village Trustee Board"
  title="Trustees"
>
  <Trustees client:idle colorValues={colorValues} trustees={trustees} />
</Layout>
